<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "background_login.jpeg" %>');">

  <div class="container">
    <div class="col-md-8 col-md-offset-2 - Medium devices (desktops, 992px and up)">

    <h2 class="text-login">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-inputs text-login">
      <%= f.input :email,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "email" } %>
      <%= f.input :password,
      required: true,
      input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
</div>
</div>
