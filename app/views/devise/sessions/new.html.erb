<style>
.banner-image {
  background-image: url('https://images.pexels.com/photos/326259/pexels-photo-326259.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');
  background-size: cover;
}
</style>

 <div class="container">
  <div class="form-row">
    <div class="col-xs-2 mx-auto">

      <br>

      <h2>Connectez vous</h2>

      <br>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        label: "Mot de passe",
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, label: "Souvenez vous de moi !" ,as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Let's GO !" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

      <br>

  </div>
</div>
</div>

